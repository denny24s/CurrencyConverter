<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/calculatorRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.calculator.CalculatorActivity"
    android:padding="16dp">

    <!-- Back button -->
    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/baseline_arrow_back_ios_new_24"
        android:layout_marginTop="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Expression text -->
    <TextView
        android:id="@+id/tvExpression"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="64dp"

        android:fontFamily="@font/jersey_font_family"
        android:maxLines="1"
        android:text="0"
        android:textColor="@android:color/black"

        android:textSize="48sp"
        app:autoSizeMaxTextSize="48sp"
        app:autoSizeMinTextSize="26sp"
        app:autoSizeStepGranularity="2sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toStartOf="@+id/btnDelete"
        app:layout_constraintStart_toEndOf="@+id/btnBack"
        app:layout_constraintTop_toBottomOf="@+id/btnBack" />

    <!-- Delete button -->
    <ImageView
        android:id="@+id/btnDelete"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="36dp"
        android:src="@drawable/baseline_backspace_24"
        app:layout_constraintBottom_toTopOf="@+id/divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Snippet (preview result) -->
    <TextView
        android:fontFamily="@font/jersey_font_family"
        android:id="@+id/tvSnippet"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="@android:color/darker_gray"
        android:text=""
        android:maxLines="1"
        app:layout_constraintStart_toStartOf="@+id/tvExpression"
        app:layout_constraintEnd_toEndOf="@+id/tvExpression"
        app:layout_constraintTop_toBottomOf="@+id/tvExpression"
        android:layout_marginTop="8dp" />

    <!-- Divider line -->
    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginBottom="24dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toTopOf="@+id/keypad"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- First row: 7, 8, 9, + -->
    <!-- below your divider… -->
    <GridLayout
        android:id="@+id/keypad"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:alignmentMode="alignBounds"
        android:columnCount="4"
        android:rowCount="4"
        android:useDefaultMargins="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Row 1 -->
        <Button
            android:id="@+id/btn7"
            style="@style/CalculatorKey"
            android:text="7" />

        <Button
            android:id="@+id/btn8"
            style="@style/CalculatorKey"
            android:text="8" />

        <Button
            android:id="@+id/btn9"
            style="@style/CalculatorKey"
            android:text="9" />

        <Button
            android:id="@+id/btnPlus"
            style="@style/CalculatorKey"
            android:text="+" />

        <!-- Row 2 -->
        <Button
            android:id="@+id/btn4"
            style="@style/CalculatorKey"
            android:text="4" />

        <Button
            android:id="@+id/btn5"
            style="@style/CalculatorKey"
            android:text="5" />

        <Button
            android:id="@+id/btn6"
            style="@style/CalculatorKey"
            android:text="6" />

        <Button
            android:id="@+id/btnMultiply"
            style="@style/CalculatorKey"
            android:text="×" />

        <!-- Row 3 -->
        <Button
            android:id="@+id/btn1"
            style="@style/CalculatorKey"
            android:text="1" />

        <Button
            android:id="@+id/btn2"
            style="@style/CalculatorKey"
            android:text="2" />

        <Button
            android:id="@+id/btn3"
            style="@style/CalculatorKey"
            android:text="3" />

        <Button
            android:id="@+id/btnMinus"
            style="@style/CalculatorKey"
            android:text="-" />

        <!-- Row 4 -->
        <Button
            android:id="@+id/btn0"
            style="@style/CalculatorKey"
            android:text="0" />

        <Button
            android:id="@+id/btnDot"
            style="@style/CalculatorKey"
            android:text="." />

        <Button
            android:id="@+id/btnEqual"
            style="@style/CalculatorKey"
            android:text="=" />

        <Button
            android:id="@+id/btnDivide"
            style="@style/CalculatorKey"
            android:text="÷" />

    </GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
